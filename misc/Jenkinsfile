node {
    def commit_id
    def docker = "my docker"
    stage('Preparation') {
        checkout scm
        sh "git rev-parse --short HEAD > .git/commit_id"
        commit_id = readFile('.git/commit_id').trim()
    }
    stage('test') {
        nodejs(nodeJSInstallationName: 'nodejs') {
            sh 'npm install --only-dev'
            sh 'npm test'
        }
    }
    stage('docker build/push') {

        docker.withDockerRegistry(registry: [url: 'https://index.docker.io/v1/', credentialsId:'dockerhub']) {
            def app = docker.build("majumder1996/nodejs-demo:${commit_id}", '.').push()
        }
    }
}
